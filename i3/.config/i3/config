    bindsym Shift+g exec "(sleep 30 && echo -n | xclip ) &  grep -E ^gl $HOME/.actk.pl |& xclip"
    bindsym g exec "(sleep 30 && echo -n | xclip) & grep -E ^ghp $HOME/.actk.pl |& xclip"
