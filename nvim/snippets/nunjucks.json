{
	"block": {
		"prefix": "njblock",
		"body": "{% block ${1:name} %}\n\t$2\n{% endblock %}",
		"description": "Nunjucks Block"
	},
	"extends": {
		"prefix": "njextends",
		"body": "{% extends \"${1:template}.njk\" %}",
		"description": "Nunjucks Extends"
	},
		"include": {
		"prefix": "njinclude",
		"body": "{% include \"${1:part}.njk\" %}",
		"description": "Nunjucks Include"
	},

	"filter": {
		"prefix": "njfilter",
		"body": "{% filter ${1:filter} %}\n\t$2\n{% endfilter %}",
		"description": "Nunjucks Filter"
	},
	"for": {
		"prefix": "njfor",
		"body": "{% for ${1:item} in ${2:sequence} %}\n\t$3\n{% endfor %}",
		"description": "Nunjucks For"
	},
	"if": {
		"prefix": "njif",
		"body": "{% if ${1:expr} %}\n\t$2\n{% endif %}",
		"description": "Nunjucks If"
	},
	"macro": {
		"prefix": "njmacro",
		"body": "{% macro ${1:name}(${2:args}) %}\n\t$3\n{% endmacro %}",
		"description": "Nunjucks Macro"
	},
	"comment": {
		"prefix": "njcomment",
		"body": "{# ${1:comment} #}\n",
		"description": "Nunjucks Comment"
	},
	"commentBlock": {
		"prefix": "njcblock",
		"body": "{# \n\t${1:comment}\n#}\n",
		"description": "Nunjucks Comment"
	}
}
